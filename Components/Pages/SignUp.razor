@page "/signup"


<div class="parent_signin2">
    <div class="signin_signup2">
        <button class="signin" href="login">
            Sign In
        </button>
        <button class="signup">
            Sign up
        </button>
    </div>
</div>

<div class="Welcome_txt">
    <div> Register</div>
</div>

<div class="form-group">
    <label for="name">Name</label>
    <InputText id="name" class="form-control" />
</div>

<div class="form-group">
    <label for="surname">Surname</label>
    <InputText id="surname" class="form-control" />
</div>

<div class="form-group">
    <label for="email">Email</label>
    <InputText id="email" class="form-control" />
</div>

<div class="form-group">
    <label for="country">Country</label>
    <InputText id="country" class="form-control" />
</div>

<div class="form-group">
    <label for="password">Password</label>
    <InputText id="password" type="password" class="form-control" />
</div>

<button type="submit" class="btn btn-primary">Register</button>

